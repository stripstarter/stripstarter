<%= form_for @user_session, html: {class: "form-horizontal", role: "form"} do |f| %>
  <% @user_session.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>