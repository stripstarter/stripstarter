<%= text_field_tag 'performer_search', nil, placeholder: "Find a performer..." %>

<script type="text/javascript">
  $(function() {

    $('#search_box').hide();

    $('#performer_search').autocomplete({
      minLength: 2,
      source: '<%= performer_search_path(:json) %>',

      focus: function(event, ui) {
        $('#performer_search').val(ui.item.value);
        return false;
      },

      select: function(event, ui) {
        $('#performer_search').val(ui.item.value);
        $('#link_origin_id').val(ui.item.id);
        return false;
      }
    })
    .data( "ui-autocomplete" )._renderItem = function( ul, item ) {
      return $( "<li></li>" )
        .data( "autocomplete-item", item )
        .append( "<a href=" + item.url + ">" + item.value +  "</a>" )
        .appendTo( ul );
    };
  });
</script>

<h3>Some performers</h3>

<table class="table table-striped">
  <% @performers.each do |performer| %>
    <tr><td><%= link_to "#{performer.name}", performer_path(performer) %></td></tr>
  <% end %>
</table>